<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Barometer_App.Views.MainPage"
             Title="{Binding Title}">

    <StackLayout>
        <Image Source="Logo.JPG" Margin="40, 20"/>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>

            <StackLayout x:Name="ShowBarsBtn" Grid.Row="0" Grid.Column="0" 
                         VerticalOptions="CenterAndExpand" BackgroundColor="{StaticResource BtnColor}"
                         Margin="3,3">
                <Image Source="beer.png" InputTransparent="True"/>
                <Label Text="SHOW BARS" Margin="10" InputTransparent="True"
                       HorizontalOptions="CenterAndExpand" Style="{StaticResource BtnLabelStyle}"/>

                <StackLayout.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding NavShowBarsCommand}"/>
                </StackLayout.GestureRecognizers>
            </StackLayout>

            <StackLayout x:Name="Login" Grid.Row="0" Grid.Column="1" 
                         VerticalOptions="CenterAndExpand" BackgroundColor="{StaticResource BtnColor}"
                         Margin="3,3">
                <Image Source="man.png" InputTransparent="True"/>
                <Label Text="LOGIN" Margin="10" InputTransparent="True"
                       HorizontalOptions="CenterAndExpand" Style="{StaticResource BtnLabelStyle}"/>

                <StackLayout.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding NavLoginCommand}"/>
                </StackLayout.GestureRecognizers>
            </StackLayout>

            <StackLayout x:Name="SignUp" Grid.Row="1" Grid.Column="0" 
                         VerticalOptions="CenterAndExpand" BackgroundColor="{StaticResource BtnColor}"
                         Margin="3,3">
                <Image Source="pen.png" InputTransparent="True"/>
                <Label Text="SIGN UP" Margin="10" InputTransparent="True"
                       HorizontalOptions="CenterAndExpand" Style="{StaticResource BtnLabelStyle}"/>

                <StackLayout.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding NavSignUpCommand}"/>
                </StackLayout.GestureRecognizers>
            </StackLayout>

            <StackLayout x:Name="About" Grid.Row="1" Grid.Column="1" 
                         VerticalOptions="CenterAndExpand" BackgroundColor="{StaticResource BtnColor}"
                         Margin="3,3">
                <Image Source="questionmark.png" InputTransparent="True"/>
                <Label Text="SIGN UP" Margin="10" InputTransparent="True"
                       HorizontalOptions="CenterAndExpand" Style="{StaticResource BtnLabelStyle}"/>

                <StackLayout.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding NavAboutCommand}"/>
                </StackLayout.GestureRecognizers>
            </StackLayout>

            <!--<Button Text="Show Bars" Grid.Column="0" Grid.Row="1"
                    Style="{StaticResource MainPageButton}" Command="{Binding Path=NavShowBarsCommand}"></Button>
            <Button Text="Log In" Grid.Column="1" Grid.Row="1"
                    Style="{StaticResource MainPageButton}" Command="{Binding Path=NavLoginCommand}"></Button>
            <Button Text="Sign Up" Grid.Column="0" Grid.Row="2"
                    Style="{StaticResource MainPageButton}" Command="{Binding Path=NavSignupCommand}"></Button>
            <Button Text="About" Grid.Column="1" Grid.Row="2"
                    Style="{StaticResource MainPageButton}"></Button>
            -->
        </Grid>
    </StackLayout>
</ContentPage>