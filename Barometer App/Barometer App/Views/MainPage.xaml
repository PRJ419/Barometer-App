<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Barometer_App.Views.MainPage"
             Title="{Binding Title}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
        </Grid.RowDefinitions>

        <Image Source="barometer.png" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"></Image>

        <Button Text="Show Bars" Grid.Column="0" Grid.Row="1" Style="{StaticResource MainPageButton}" Command="{Binding Path=ShowBarsCommand}"></Button>
        <Button Text="Log In" Grid.Column="1" Grid.Row="1" Style="{StaticResource MainPageButton}"></Button>
        <Button Text="Sign Up" Grid.Column="0" Grid.Row="2" Style="{StaticResource MainPageButton}"></Button>
        <Button Text="About" Grid.Column="1" Grid.Row="2" Style="{StaticResource MainPageButton}"></Button>
    </Grid>
</ContentPage>