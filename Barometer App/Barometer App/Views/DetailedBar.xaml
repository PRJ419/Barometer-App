<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Barometer_App.Views.DetailedBar"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             Title="{Binding Bar.Name}">
    <ContentPage.Content>
        <ScrollView Margin="10">
        <StackLayout>
            <Image Source="{Binding Bar.Image}" 
                   VerticalOptions="Center"
                   HorizontalOptions="Center"></Image>
            <StackLayout Orientation="Horizontal">
                <Label Text="Age Limit is:" FontSize="Small" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"></Label>
                    <Label Text="{Binding Bar.AgeRestriction}" FontSize="Large"
                           HorizontalTextAlignment="Center" VerticalTextAlignment="Center"
                           HorizontalOptions="CenterAndExpand"></Label>
            </StackLayout>

                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="4*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Button Text="Rate!" FontSize="Small" Command="{Binding RatingCommand}"></Button>
                <Label Grid.Column="1" Text="Rating: " TextColor="Black" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" FontSize="10"></Label>
                <ProgressBar Grid.Column="2" Progress="{Binding Bar.Rating}" ProgressColor="Green"></ProgressBar>
            </Grid>

            <Label Text="{Binding Bar.LongAboutText}" FontSize="10"></Label>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Text="Drinks" Style="{DynamicResource DetailedBarButton}"></Button>
                <Button Grid.Column="1" Text="Events" Style="{DynamicResource DetailedBarButton}"></Button>
                <Button Grid.Column="2" Text="Coupons" Style="{DynamicResource DetailedBarButton}"></Button>

            </Grid>
        </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>